{
  "manifest_version": 3,
  "name": "JAI - ATS Resume Optimizer",
  "version": "1.0",
  "description": "One-click resume tailoring and Overleaf PDF generation.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "clipboardWrite",
    "cookies",
    "sidePanel"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://www.overleaf.com/*",
    "http://localhost:3000/*",
    "*://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open JAI Sidebar",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://www.overleaf.com/*"
      ],
      "js": [
        "scripts/content_overleaf.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  }
}