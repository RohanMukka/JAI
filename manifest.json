{
  "manifest_version": 3,
  "name": "JAI - ATS Resume Optimizer",
  "version": "1.0",
  "description": "One-click resume tailoring and Overleaf PDF generation.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://www.overleaf.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://www.overleaf.com/*"
      ],
      "js": [
        "scripts/content_overleaf.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  }
}